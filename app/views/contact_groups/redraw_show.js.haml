- entity_name = controller.controller_name.singularize.underscore #contact_group
- @entity = instance_variable_get("@#{entity_name}")

- if @contacts.any?
  jQuery('#contacts').html('#{ j render :partial => "contacts/contact", :collection => @contacts}');
- else
  jQuery('#contacts').html('#{ j render(:text => "No contacts found")}');
-#jQuery('#main').html('#{ j (render :template => "#{entity_name.pluralize}/show.html", entity_name => @entity) }');
-#= raw generate_js_for_popups(@entity, :tasks, :contacts, :opportunities)
jQuery('#search_results_count').html('#{ j render(:text => t('search_results_count', :count => @contacts.count)) }');
