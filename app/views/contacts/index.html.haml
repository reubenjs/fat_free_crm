= styles_for :contact

= render 'entities/title_bar'
= render "search"
%section.content.bg-white#main
  .row
    .col-sm-4.col-xs-12.bg-white.menu-open#left
      
      .box.no-border.full-height
        .box-content          
          .row#entities
            .col-md-12
              %ul.entity-list.list#contacts
                - if @contacts.any?
                  = render @contacts
                - else
                  = render "shared/empty"
        .box-footer
          #paginate= render "shared/paginate_with_per_page"
          #export= render "shared/export"
    .col-sm-8.col-xs-12.hidden-xs.bg-white.menu-open#right
      .box.no-border.full-height
        %div#form-pane
  -#.remote#options{ hidden }





