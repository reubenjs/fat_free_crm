= styles_for :contact

= render 'entities/title_bar'

%section.content
  .row
    .col-xs-12
      .box.box-primary.box-solid#create_contact{ hidden }

  = render "search"

  .remote#options{ hidden }

  .list#contacts
    - if @contacts.any?
      = render @contacts
    - else
      = render "shared/empty"

  #paginate= render "shared/paginate_with_per_page"
  #export= render "shared/export"
