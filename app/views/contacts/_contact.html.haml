- if (template = template_for_current_view).present?
  - account_updated = contact.account.present? ? contact.account.updated_at : 0
  - cache ["contact-#{contact.id}", params[:controller], template, contact.updated_at.to_i, account_updated.to_i, mobile_device? ? "mob" : "dt"] do
    = render(template, :contact => contact)
- else
  -# default view
  = render 'contacts/index_brief', :contact => contact
