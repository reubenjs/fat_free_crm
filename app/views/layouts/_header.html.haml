%header.header
  = link_to("FatFreeCRM", root_path, :class => "logo")
  %nav{:class => "navbar navbar-static-top", :role => "navigation"}
    =link_to("#", :class => "navbar-btn sidebar-toggle", :data => {:toggle => "offcanvas"}, :role => "button") do
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .navbar-right
      %ul.nav.navbar-nav
        - if current_user
          - current_user_tasks = Task.my(user: current_user)
          %li.dropdown.tasks-menu
            %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
              %i.fa.fa-tasks
              %span.label.label-danger= current_user_tasks.count
            %ul.dropdown-menu
              - unless current_user_tasks.empty?
                = render :partial => "home/task", :collection => current_user_tasks.limit(10)
              - else
                %li #{t :no_task_records}
          %li.dropdown.user.user-menu
            %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
              %i.glyphicon.glyphicon-user
              %span
                = current_user.name
                %i.caret
            %ul.dropdown-menu
              %li.user-header.bg-light-blue
                = link_to avatar_for(current_user, :size => :large, :class => "img-circle"), user_path(current_user)
                %p= "#{current_user.first_name} #{current_user.last_name}"
              -#%li.user-body
              %li.user-body
                .col-xs-4.text-center
                  = link_to(t(:profile), profile_path)
                - if current_user.admin?
                  .col-xs-4.text-center
                    = link_to(t(:admin), admin_path)
                .col-xs-4.text-center
                  = link_to(t(:logout), logout_path, method: :delete)
        - else
          %li= link_to(t(:login), login_path) << " |"
          %li= link_to(t(:sign_up), signup_path) << " |" if can_signup?
          %li= link_to(t(:about), "#", :title => t(:about_ffc), :onclick => "$('#about').dialog({ title: this.title, modal: true }); return false;")