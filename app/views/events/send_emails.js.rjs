id = "email_event"

if @event.errors.empty?
  page.call "crm.flip_form", :email_event
  page.call "crm.set_title", :edit_event, @event.name
  flash[:notice] = "Emails Sent"
  page[:flash].replace_html flash[:notice]
  page.call "crm.flash", :notice
  flash[:notice] = nil
  
else  
  page[id].replace_html :partial => "email_registrants"
  page[id].visual_effect :shake, :duration => 0.25, :distance => 6
  page[:from_name].focus
end
